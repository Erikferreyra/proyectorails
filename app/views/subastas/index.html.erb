# en esta vista tengo pensado agregar una columna para pujar, con un boton
# ese boton deberia llevarme a la vista "create", supongo que el de reserva
# en esa vista hay que ver si el usuario dispone del credito, si puede comprar directamente 

<div class="container-fluid">
  <div class="p-3 mb-2 bg-dark text-white">
      <h1>Auction listing</h1>
  </div>

    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Tittle</th>
          <th scope="col">Auction start date</th>
          <th scope="col">Home</th>
          <th scope="col">Reservation date</th>
        </tr>
      </thead>

      <% @subastas.each do |subasta| %>
      <tbody>
          <tr>
            <th scope="row"><%= subasta.titulo%></th>
            <td><%= subasta.fechainicio%></td>
            <% id_reserva = Reservation.find(subasta.reservation_id).home_id %>
            <% h = Home.find(id_reserva) %>
            <td><%= h.nombre %> </td>
            <td><%= Reservation.find(subasta.reservation_id).fecha_ini %></td>
          </tr>
      </tbody>
      <% end %>
    </table>
</div>
