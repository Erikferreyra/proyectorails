    <section id="main"
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
List of residences</h3>
			</div>
			<div class="panel-body">
				<table class="table table-striped table-hover">
				<tr>
					<th>Name</th>
					<th>Location</th>
          <th>Number of rooms</th>
				</tr>
				<% @homes.each do |home| %>
					<tr>
						<td><%= home.nombre %></td>
						<td>
						<%= home.ubicacion %>
						</td>
						<td><%= home.canthabitacion %></td>
						<td><%= link_to "Edit",edit_home_path(home),class: "btn btn-default"%>
						<%= link_to "Delet",home,method: :delete,data:{confirm: "Estas seguro?"},class: "btn btn-default"%>
						</td>
					</tr>
				<%end%>
				</table>
			</div>
		</div>
    </section>
    <%= link_to "New Residence",new_home_path,class: "btn btn-default"%>
