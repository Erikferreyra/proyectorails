<section id="main"
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">
					Listado de reservas no adjudicadas</h3>
		</div>
		<div class="panel-body">
			<table class="table table-striped table-hover">
				<tr>
					<th>Nombre</th>
					<th>Fecha de inicio</th>
				</tr>
				<% @subastas.each do |sub| %>
					<% if (sub.fechainicio + 3.day) < (Date.today) && sub.reservation_id.adjudicada == false%>
					<tr>
						<td><%= sub.reservation_id.nombre %></td>
						<td><%= sub.reservation_id.fecha_ini %></td>
						<td>
							<% @hot_sales.each do |hot| %>
							<%= form_for hot do |h| %>
								<%= h.hidden_field :reservation_id, value: !hot.reservation_id %>
    							<%= h.submit "Cambiar a #{user.premium ? "basico" : "premium"}" %>
							<%end%>
							<%end%>
						</td>
					</tr>
					<%end%>
				<%end%>
			</table>
		</div>
	</div>
</section>
